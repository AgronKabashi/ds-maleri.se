---
layout: main-layout.liquid
---

<header>
  <div class="navbar-area">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">
              <span style="color: #d43f77">D</span
              ><span style="color: #e3ae22; font-size: 0.75em">&amp;</span
              ><span style="color: #007bff">S</span>
              <span style="color: white">Måleri</span>
            </a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
            </button>

            <div
              class="collapse navbar-collapse sub-menu-bar"
              id="navbarSupportedContent"
            >
              <ul id="nav" class="navbar-nav ml-auto">
                <li class="nav-item active">
                  <a class="page-scroll" href="#home">Hem</a>
                </li>
                <li class="nav-item">
                  <a class="page-scroll" href="#features">Tjänster</a>
                </li>
                <li class="nav-item">
                  <a class="page-scroll" href="#about">Om oss</a>
                </li>
                <li class="nav-item">
                  <a class="page-scroll" href="#footer">Kontakta oss</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div
    id="home"
    class="header-hero bg_cover"
    style="background-image: url(assets/images/banner-bg.svg)"
  >
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="header-hero-content text-center">
            <h3
              class="header-sub-title wow fadeInUp"
              data-wow-duration="1.3s"
              data-wow-delay="0.2s"
            >
              D&S Måleri
            </h3>
            <h2
              class="header-title wow fadeInUp"
              data-wow-duration="1.3s"
              data-wow-delay="0.5s"
            >
              Vi sätter färg på din tillvaro!
            </h2>
            <p
              class="text wow fadeInUp"
              data-wow-duration="1.3s"
              data-wow-delay="0.8s"
            >
              Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam
              nonumy eirmod tempor
            </p>
            <a
              href="#content"
              class="main-btn wow fadeInUp"
              data-wow-duration="1.3s"
              data-wow-delay="1.1s"
              >Läs mer</a
            >
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div
            class="header-hero-image text-center wow fadeIn"
            data-wow-duration="1.3s"
            data-wow-delay="1.4s"
          >
            <img src="assets/images/header-hero.png" alt="hero" />
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<main class="content" id="content">{{ content }}</main>

<footer id="footer" class="footer-area pt-120">
  <div class="container">
    <div
      class="subscribe-area wow fadeIn"
      data-wow-duration="1s"
      data-wow-delay="0.5s"
    >
      <form action="javascript:void(0)">
        <div class="row">
          <div class="col-lg-12">
            <div class="subscribe-content mt-45">
              <h2 class="subscribe-title">
                Maila oss <span>om era behov</span>
              </h2>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="subscribe-form mt-50">
              <textarea
                placeholder="Ställ din fråga / beskriv dina önskemål"
              ></textarea>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="subscribe-form mt-50">
              <input type="text" placeholder="Ange din e-post" />
              <button class="main-btn">Skicka</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="footer-widget pb-100">
      <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-8">
          <div
            class="footer-about mt-50 wow fadeIn"
            data-wow-duration="1s"
            data-wow-delay="0.2s"
          >
            <a class="logo" href="#" style="font-size: 1.5rem">
              <span style="color: #d43f77">D</span
              ><span style="color: #e3ae22; font-size: 0.75em">&amp;</span
              ><span style="color: #007bff">S</span>
              <span style="color: white">Måleri</span>
            </a>
            <ul class="social">
              <li>
                <a href="#"><i class="lni-facebook-filled"></i></a>
              </li>
              <li>
                <a href="#"><i class="lni-instagram-filled"></i></a>
              </li>
              <li>
                <a href="#"><i class="lni-linkedin-original"></i></a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
          <div class="footer-link d-flex mt-50 justify-content-md-between">
            <div
              class="link-wrapper wow fadeIn"
              data-wow-duration="1s"
              data-wow-delay="0.6s"
            >
              <div class="footer-title">
                <h4 class="title">Länkar</h4>
              </div>
              <ul class="link">
                <li><a href="#">Hem</a></li>
                <li><a href="#">Tjänster</a></li>
                <li><a href="#">Om oss</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
          <div
            class="footer-contact mt-50 wow fadeIn"
            data-wow-duration="1s"
            data-wow-delay="0.8s"
          >
            <div class="footer-title">
              <h4 class="title">Kontakta oss</h4>
            </div>
            <ul class="contact">
              <li>0703-10 48 60</li>
              <li>info@ds-maleri.se</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
